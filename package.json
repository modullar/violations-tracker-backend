{
  "name": "violations-tracker-backend",
  "version": "1.0.0",
  "description": "RESTful API for Syria Violations Tracker",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "start:test": "NODE_ENV=test node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "staging": "NODE_ENV=staging node src/server.js",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:record-geocoder": "NODE_ENV=test RECORD=true jest src/tests/utils/geocoder.test.js --detectOpenHandles --forceExit",
    "test:sanitize-fixtures": "node -e \"require('./src/tests/utils/fixtureSanitizer').sanitizeDirectory('./src/tests/fixtures')\"",
    "test:clean-fixtures": "rm -rf ./src/tests/fixtures/*.json",
    "posttest:record-geocoder": "npm run test:sanitize-fixtures",
    "build": "NODE_ENV=production node -e \"console.log('Build completed successfully')\"",
    "seed": "node src/utils/seeder.js -i",
    "seed:delete": "node src/utils/seeder.js -d",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "migrate:status": "migrate-mongo status",
    "migrate:up": "migrate-mongo up",
    "migrate:down": "migrate-mongo down",
    "migrate:create": "migrate-mongo create",
    "import:violations": "node src/scripts/importViolationsToProduction.js",
    "postinstall": "[ \"$NODE_ENV\" != \"production\" ] && husky || echo \"Skipping husky installation in production\""
  },
  "keywords": [
    "syria",
    "violations",
    "human-rights",
    "api",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@bull-board/api": "^6.10.0",
    "@bull-board/express": "^6.10.0",
    "axios": "^1.8.4",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "mongoose-paginate-v2": "^1.9.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "node-geocoder": "^4.4.1",
    "redis": "^5.1.0",
    "string-similarity": "^4.0.4",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "chai": "^5.2.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "migrate-mongo": "^12.1.3",
    "mongodb-memory-server": "^9.1.3",
    "nock": "^14.0.4",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
