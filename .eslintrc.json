{
  "env": {
    "browser": false,
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "next|req|res" }],
    "no-console": ["warn", { "allow": ["warn", "error", "info"] }],
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
  }
}